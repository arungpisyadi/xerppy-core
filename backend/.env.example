# Application
APP_NAME="Xerppy API"
APP_VERSION="0.1.0"
DEBUG=false

# Database
# For SQLite
# DATABASE_URL="sqlite+aiosqlite:///./xerppy.db"

# For PostgreSQL
# DATABASE_URL="postgresql+asyncpg://user:password@localhost/xerppy"

# For MySQL:
# DATABASE_URL="mysql+aiomysql://user:password@localhost/xerppy"

# JWT Authentication
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY="your-super-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:5173"

# Server Configuration
# Host and port for the backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8003
