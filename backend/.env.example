# =============================================================================
# Xerppy API Environment Configuration
# =============================================================================
# Copy this file to .env and modify the values as needed for your environment.
# Never commit the .env file with real secrets to version control.
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="Xerppy API"
APP_VERSION="0.1.0"
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================
# IMPORTANT: Choose your database type below. Supported values:
#   - sqlite  : Lightweight file-based database (default, for development)
#   - postgresql : Production-grade relational database
#   - mysql   : Popular open-source database
#
# Example: DATABASE_TYPE="postgresql"
# =============================================================================
DATABASE_TYPE="sqlite"

# -----------------------------------------------------------------------------
# SQLite Configuration (used when DATABASE_TYPE="sqlite")
# -----------------------------------------------------------------------------
# Path to the SQLite database file (relative to backend directory)
# Use absolute path in production: SQLITE_PATH="/var/lib/xerppy/xerppy.db"
SQLITE_PATH="./xerppy.db"

# -----------------------------------------------------------------------------
# PostgreSQL Configuration (used when DATABASE_TYPE="postgresql")
# -----------------------------------------------------------------------------
# PostgreSQL connection settings
# For production, use a secure password and consider environment secrets
POSTGRESQL_HOST="localhost"
POSTGRESQL_PORT=5432
POSTGRESQL_USER="postgres"
POSTGRESQL_PASSWORD="password"  # CHANGE THIS in production!
POSTGRESQL_DB="xerppy"

# -----------------------------------------------------------------------------
# MySQL Configuration (used when DATABASE_TYPE="sqlite")
# -----------------------------------------------------------------------------
# MySQL connection settings
# For production, use a secure password and consider environment secrets
MYSQL_HOST="localhost"
MYSQL_PORT=3306
MYSQL_USER="root"
MYSQL_PASSWORD="password"  # CHANGE THIS in production!
MYSQL_DB="xerppy"

# =============================================================================
# Connection Pool Settings
# =============================================================================
# These settings apply to PostgreSQL and MySQL connections.
# SQLite doesn't use connection pooling.

# Pool size: Maximum number of connections to maintain in the pool
DATABASE_POOL_SIZE=5

# Max overflow: Additional connections allowed beyond pool_size when busy
DATABASE_MAX_OVERFLOW=10

# Echo SQL: Set to true to log all SQL queries (useful for debugging)
# WARNING: Do not set to true in production as it logs sensitive data
DATABASE_ECHO=false

# Pool pre-ping: Test connections before using them (helps detect stale connections)
DATABASE_POOL_PRE_PING=true

# =============================================================================
# Legacy Database URL (Backward Compatibility)
# =============================================================================
# OPTIONAL: For advanced users who prefer to set the full database URL directly.
# If provided, this takes precedence over individual database settings above.
# Comment out or leave empty to use the individual settings above.
#
# SQLite example:
# DATABASE_URL="sqlite+aiosqlite:///./xerppy.db"
#
# PostgreSQL example:
# DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/xerppy"
#
# MySQL example:
# DATABASE_URL="mysql+aiomysql://root:password@localhost:3306/xerppy"

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure secret: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY="your-super-secret-key-change-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# Comma-separated list of allowed origins for API requests
# Examples:
#   - Development: CORS_ORIGINS="http://localhost:5173"
#   - Production:  CORS_ORIGINS="https://yourdomain.com"
CORS_ORIGINS="http://localhost:5173"

# =============================================================================
# Server Configuration
# =============================================================================
# Host and port for the backend server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8003
